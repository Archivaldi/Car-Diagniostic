
    <% include ./partials/header %>

    <div class="jumbotron">
        <h2>Sign up</h2>
        <form id="main" action="/signup" method="POST">

            <div class='row'>
                <div class='col-12'>
                    <label for="email">Email </label>
                    <input id="email" type="email" name="email" required>
                </div>
            </div>
            <div class='row'>
                <div class='col-12'>
                    <label for="fullname">Full name </label>
                    <input id="fullname" type="text" name="name" required>
                </div>
            </div>
            <div class='row'>
                <div class='col-12'>
                    <label for="pass">Password </label>
                    <input id="pass" type="password" name="password" required>
                </div>
            </div>
            <div class='row'>
                <div class='col-12'>
                    <label for="carMake">Car make </label>
                    <input id="carMake" type="text" name="carMake" placeholder="eg.Ford" required>
                </div>
            </div>
            <div class='row'>
                <div class='col-12'>
                    <label for="carModel">Car model </label>
                    <input id="carModel" type="text" name="carModel" placeholder="eg.Focus" required>
                </div>
            </div>
            <div class='row'>
                <div class='col-12'>
                    <label for="carYear">Car year </label>
                    <input id="carYear" type="number" name="year" min="4" placeholder="eg.2008" required>
                </div>
            </div>
            <div class='row'>
                <div class='col-12'>
                    <label for="carVin">Car VIN </label>
                    <input id="carVin" type="text" name="carVin" min="13" required>
                </div>
            </div>
            <div class='row'>
                <div class='col-12'>
                    <button class="btn btn-primary" type="submit">Submit</button>
                </div>
            </div>

        </form>
    </div>

    <div class="footer">
        <% include ./partials/footer %>

    </div>
